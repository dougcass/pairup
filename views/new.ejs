<% include partials/header.ejs %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a New Time Slot</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/slots" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="slot[name]" placeholder="name">
                    </div>
                    <div>
                        <input id="flatpickr" type="text" placeholder="Select Date.." data-id="datetime" >
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="slot[startTime]" placeholder="Start time">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="slot[endTime]" placeholder="End time">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/slots">Go Back</a>
            </div>
        </div>
    </div>

    <div class="container">
        <input id="flatpickr" placeholder="Try me.." class="form-control">
    </div>

    <script src="https://npmcdn.com/flatpickr/dist/flatpickr.min.js"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>
        var example =  flatpickr("#flatpickr", {
            "dateFormat": "d-m-Y",
            //"maxDate": new Date(),
            "minDate": "1950-01-01",
            enableTime: true,
            allowInput: true
        });
    </script>




